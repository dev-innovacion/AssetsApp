@{Layout = null;}
@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;
@model JArray

<div class="well-content no-search">
    <table class="table table-striped table-bordered table-hover datatable" style="background-color:white">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>ID Empleado</th>
                <th>Perfil</th>
                <th>Tipo</th>
                <th>Area</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (JObject data in Model)
            {
                <tr id="@data["_id"]">
                    <td class="name">@data["name"]</td>
                    <td class="lastname">@data["lastname"]</td>
                    <td class="motherlastname">@data["motherlastname"]</td>
                    <td class="employee">@data["employee"]</td>
                    <td class="profileId">@data["profileId"]</td>
                    <td class="type">@data["type"]</td>
                    <td class="area">@data["area"]</td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-mini dark_green fileinput-button" data-original-title="Agregar" rel="tooltip" data-placement="left" onclick="assignAssettoEmployee(this)">
                                Asignar
                            </button>
                        </div>

                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    jQuery("[rel=tooltip]").tooltip();
    try {

        var table = jQuery(".table").dataTable({
            "sPaginationType": "full_numbers",
            "sDom": "<'tableHeader'<l><'clearfix'f>r>t<'tableFooter'<i><'clearfix'p>>",
            "iDisplayLength": 10,
            "sScrollY": "250px",
            "bFilter": false,
            "aoColumnDefs": [{
                'bSortable': false,
                'aTargets': [0]
            }],
            "oLanguage": {
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sInfo": "Mostrando del _START_ al _END_ de _TOTAL_ registros",
                "sSearch": "Buscar",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Ultimo",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"

                },
                "sEmptyTable": "Empleado de búsqueda"
            }
        });
        jQuery('.dataTables_length select').chosen();
        setTimeout(function () {

            table.fnAdjustColumnSizing();
        }, 2000);
    } catch (Exception) { console.log(); }

   

</script>

